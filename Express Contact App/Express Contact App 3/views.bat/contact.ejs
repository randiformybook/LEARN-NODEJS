<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Kontak</h2>

      <!-- Button untuk Menambahkan Kontak -->
      <a href="/contact/add" class="btn btn-primary mt-1"
        >Tambah Kontak Baru +</a
      >
      <!-- Flash Apabila Kontak Baru berhasil ditambah -->
      <% if (msg.length !== 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>

      <table class="table table-hover mt-md-5">
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Nama</th>
            <th scope="col">Handphone no</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <!-- Apabila Daftar Kontak masih kosong/ contact.json masih kosong -->
          <% if (contacts.length === 0) { %>
          <div class="alert alert-danger fw-bold" role="alert">
            <center>DAFTAR KONTAK MASIH KOSONG</center>
          </div>
          <!-- kalau kosong Array juga kosong -->
          <% } %> <% contacts.forEach((contact,i) => { %>
          <tr>
            <th scope="row"><%= i+1 %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.nohp %></td>
            <td>
              <a
                href="/contact/<%= contact.nama %>"
                class="btn btn-success badge rounded-pill"
                ><i class="bi bi-info-circle"></i> Details</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
